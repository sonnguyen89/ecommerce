 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
    $productpage_moreviews = MAGE::helper('ThemeOptionsLookbook')->getThemeOptionsLookbook('productpage_moreviews');
    $productpage_pagelayout = MAGE::helper('ThemeOptionsLookbook')->getThemeOptionsLookbook('productpage_pagelayout');

    switch ($productpage_pagelayout) {
        case 'productpage_extralarge':
            $imgSize = null;
            break;
        case 'productpage_large':
            $imgSize = 720;
            break;
        case 'productpage_medium':
            $imgSize = 498;
            break;
        case 'productpage_small':
            $imgSize = 286;
            break;
        default:
            $imgSize = 100;
            break;
    }
?>
<div class="product-image">
    <a id='zoom' class="cloud-zoom" data-zoom="showTitle: false, adjustX: -5, adjustY:-5, tint: '#fff', tintOpacity:0.6, position:'inside'" href="<?php echo $this->helper('catalog/image')->init($_product, 'image'); ?>"><?php
        $_img = '<img id="image" src="'.$this->helper('catalog/image')->init($_product, 'image')->constrainOnly(TRUE)->keepAspectRatio(TRUE)->keepFrame(FALSE)->resize($imgSize, null).'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?></a>

<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views-container">
	<div class="more-views<?php if ($productpage_moreviews == 'moreviews_slider' && count($this->getGalleryImages()) > 3){echo ' slider-on';} ?>">
        <h2><?php echo $this->__('More Views') ?></h2>
        <?php if ($productpage_moreviews == 'moreviews_slider' && count($this->getGalleryImages()) > 3): ?>
        <div id="more-views-slider" class="es-carousel-wrapper">
            <ul class="carousel-ul">
            <?php foreach ($this->getGalleryImages() as $_image): ?>
                <li>
                    <a class='cloud-zoom-gallery' data-zoom="useZoom: 'zoom', smallImage: '<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->constrainOnly(TRUE)->keepAspectRatio(TRUE)->keepFrame(FALSE)->resize($imgSize, NULL); ?>' " href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile()); ?>" title="<?php echo $this->escapeHtml($_image->getLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->constrainOnly(TRUE)->keepAspectRatio(TRUE)->keepFrame(FALSE)->resize(195, NULL); ?>" <?php echo MAGE::helper('ThemeOptionsLookbook/Retina')->getRetinaData('more_views', $this, $_image); ?> alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" /></a>
                </li>
            <?php endforeach; ?>
            </ul>
        </div>
        <div class = 'next'><i class="icon-angle-right"></i></div>
        <div class = 'prev unselectable'><i class="icon-angle-left"></i></div>
        <?php else: ?>
        <ul class="no-slider">
            <?php foreach ($this->getGalleryImages() as $_image): ?>
                <li>
                    <a class='cloud-zoom-gallery' data-zoom="useZoom: 'zoom', smallImage: '<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->constrainOnly(TRUE)->keepAspectRatio(TRUE)->keepFrame(FALSE)->resize($imgSize, NULL); ?>' " href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile()); ?>" title="<?php echo $this->escapeHtml($_image->getLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->constrainOnly(TRUE)->keepAspectRatio(TRUE)->keepFrame(FALSE)->resize(195, NULL); ?>" <?php echo MAGE::helper('ThemeOptionsLookbook/Retina')->getRetinaData('more_views', $this, $_image); ?> alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" /></a>
                </li>
            <?php endforeach; ?>
        </ul>        
        <?php endif; ?>
    </div>
</div>
<?php endif; ?>
</div>