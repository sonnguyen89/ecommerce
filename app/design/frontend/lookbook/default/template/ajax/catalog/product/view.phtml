        <script type="text/javascript">
		//<![CDATA[
			var productAddToCartForm = new VarienForm('product_addtocart_form');
			productAddToCartForm.submit = function(button, url) {
			if (this.validator.validate()) {
				var form = this.form;
				var oldUrl = form.action;
				if (url) {
					form.action = url;
				}
				var e = null;
				// Start of our new ajax code
				if (!url) {
					url = jQuery('#product_addtocart_form').attr('action');
				}
				
				url = url.replace("checkout/cart","ajax/index"); // New Code
				var data = jQuery('#product_addtocart_form').serialize();
				data += '&isAjax=1';
				jQuery('#ajax_loader').show().parents('.price-button-box').addClass('active');
				try {
					jQuery.ajax( {
						url : url,
						dataType : 'json',
						type : 'post',
						data : data,
						complete: function(){
							if(jQuery('body').hasClass('product-edit')){
								jQuery('#ajax_loader').hide();
								jQuery('body').append('<div class="add-to-cart-success"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name').' '.$this->__('Updated') ?><br/><a href="<?php echo $this->getUrl('checkout/cart'); ?>"><span><?php echo $this->__('Go to Shopping Cart') ?></span></a><a href="#" class="btn-remove"><i class="icon-remove"></i></a></div>');
								setTimeout(function () {jQuery('.add-to-cart-success').slideUp(500)}, 5000);
								jQuery('.add-to-cart-success a.btn-remove').click(function(){
									jQuery(this).parent().slideUp(500);
									return false;
								})
							}
						},
						success : function(data) {
							jQuery('#ajax_loader').hide().parents('.price-button-box').removeClass('active');
							if(data.status == 'ERROR'){
								alert(data.message);
							}else{
								if(jQuery('.top-cart')){
									jQuery('.top-cart').replaceWith(data.sidebar);
								}
								/* if(jQuery('.header .links')){
									jQuery('.header .links').replaceWith(data.toplink);
								} */
							}
							jQuery('body').append('<div class="add-to-cart-success">' + data.message +' <a href="<?php echo $this->getUrl('checkout/cart'); ?>"><span><?php echo $this->__('Go to Shopping Cart') ?></span></a><a href="#" class="btn-remove">&nbsp;</a></div>');
							setTimeout(function () {jQuery('.add-to-cart-success').slideUp(500)}, 5000);
							jQuery('.add-to-cart-success a.btn-remove').click(function(){
								jQuery(this).parent().slideUp(500);
								return false;
							})
						}
					});
				} catch (e) {
				}
				// End of our new ajax code
				this.form.action = oldUrl;
				if (e) {
					throw e;
				}
			}
		}.bind(productAddToCartForm);
		
		productAddToCartForm.submitLight = function(button, url){
