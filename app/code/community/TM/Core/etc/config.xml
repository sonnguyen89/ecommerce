<?xml version="1.0"?>
<config>
    <modules>
        <TM_Core>
            <version>1.2.0</version>
        </TM_Core>
    </modules>

    <global>
        <models>
            <tmcore>
                <class>TM_Core_Model</class>
                <resourceModel>tmcore_resource</resourceModel>
            </tmcore>
            <tmcore_resource>
                <class>TM_Core_Model_Resource</class>
                <entities>
                    <module>
                        <table>tm_core_module</table>
                    </module>
                </entities>
            </tmcore_resource>
        </models>
        <blocks>
            <tmcore>
                <class>TM_Core_Block</class>
            </tmcore>
        </blocks>
        <helpers>
            <tmcore>
                <class>TM_Core_Helper</class>
            </tmcore>
        </helpers>
        <resources>
            <tm_core_setup>
                <setup>
                    <module>TM_Core</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </tm_core_setup>
        </resources>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <tmcore>
                    <file>tmcore.xml</file>
                </tmcore>
            </updates>
        </layout>
        <events>
            <controller_action_predispatch>
                <observers>
                    <tmcore>
                        <class>tmcore/observer</class>
                        <method>preDispatch</method>
                    </tmcore>
                </observers>
            </controller_action_predispatch>
        </events>
        <translate>
            <modules>
                <TM_Core>
                    <files>
                        <default>TM_Core.csv</default>
                    </files>
                </TM_Core>
            </modules>
        </translate>
        <menu>
            <templates_master>
                <title>Templates Master</title>
                <sort_order>71</sort_order>
                <children>
                    <tmcore_module translate="title" module="tmcore">
                        <title>Modules</title>
                        <sort_order>999</sort_order>
                        <action>adminhtml/tmcore_module/index</action>
                    </tmcore_module>
                </children>
            </templates_master>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <tmcore>
                                            <title>Core</title>
                                        </tmcore>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <templates_master>
                            <title>Templates Master</title>
                            <sort_order>71</sort_order>
                            <children>
                                <tmcore_module translate="title" module="tmcore">
                                    <title>Modules</title>
                                    <sort_order>999</sort_order>
                                </tmcore_module>
                            </children>
                        </templates_master>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <admin>
        <routers>
             <adminhtml>
                 <args>
                     <modules>
                         <tmcore before="Mage_Adminhtml">TM_Core_Adminhtml</tmcore>
                     </modules>
                 </args>
             </adminhtml>
        </routers>
    </admin>

    <default>
        <tmcore>
            <modules>
                <feed_url>templates-master.com/modules</feed_url>
            </modules>
            <license>
                <use_https>0</use_https>
                <url>/license/validate</url>
            </license>
            <notification>
                <feed_url>templates-master.com/notifier</feed_url>
                <use_https>0</use_https>
                <frequency>24</frequency>
                <filter>installed,promo,release,update,other</filter>
                <last_update>0</last_update>
            </notification>
            <troubleshooting>
                <text><![CDATA[Please <a href='http://templates-master.com/contacts' onclick='window.open(this.href); return false;'>contact us</a>, if you have some issues with one of our modules.]]></text>
            </troubleshooting>
        </tmcore>
    </default>
</config>
